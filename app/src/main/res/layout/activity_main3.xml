<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2C3F3"
    android:backgroundTint="#80FFDCE2"
    tools:context=".MainActivity3">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_action_name"
        android:elevation="15dp"
        android:padding="10dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/firstlayout"
        android:layout_width="match_parent"
        android:layout_height="383dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="20dp"
            android:text="Player 1"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/im_player1"
            android:layout_width="173dp"
            android:layout_height="185dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:rotation="180"
            android:src="@drawable/paper" />


        <ImageButton
            android:id="@+id/rockbttn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="-250dp"
            android:background="@drawable/shape"
            android:elevation="12dp"
            android:padding="5dp"
            android:src="@drawable/rocklogo21" />

        <ImageButton
            android:id="@+id/paperbttn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:elevation="12dp"
            android:padding="5dp"
            android:src="@drawable/paperlogo" />

        <ImageButton
            android:id="@+id/scissorsbttn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:elevation="12dp"
            android:padding="5dp"
            android:src="@drawable/scissorslogo" />

        <TextView
            android:id="@+id/score1"
            android:layout_width="438dp"
            android:layout_height="57dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Score: Player 0 Computer 0"
            android:textSize="30dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/secondlayout"
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:layout_below="@id/firstlayout"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_player2"
            android:layout_width="173dp"
            android:layout_height="185dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/rock" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="180dp"
            android:text="Player 2"
            android:textSize="20dp" />


        <ImageButton
            android:id="@+id/scissorsbttn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-220dp"
            android:background="@drawable/shape"
            android:elevation="12dp"
            android:padding="5dp"
            android:src="@drawable/scissorslogo" />

        <ImageButton
            android:id="@+id/paperbttn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:elevation="12dp"
            android:padding="5dp"
            android:src="@drawable/paperlogo" />

        <ImageButton
            android:id="@+id/rockbttn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:elevation="12dp"
            android:padding="5dp"
            android:src="@drawable/rocklogo21" />


    </LinearLayout>
</RelativeLayout>